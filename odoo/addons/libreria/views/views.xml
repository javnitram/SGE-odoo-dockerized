        }
      </field>
    </record>
-->

    <!-- Top menu item -->
    <menuitem name="libreria" id="libreria.menu_root"/>

    <!-- actions -->
    <menuitem name="Categoría" id="libreria_categoria_menu" parent="libreria.menu_root"
              action="libreria_categoria_action_window"/>
    <menuitem name="Libros" id="libreria_libro_menu" parent="libreria.menu_root"
              action="libreria_libro_action_window"/>

  </data>
</odoo>